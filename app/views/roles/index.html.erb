
<h1>Roles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Project</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.user.name unless role.user.nil?  %></td>
        <td><%= role.project.title unless role.project.nil?  %></td>
        <td><%= role.role %></td>
        <td><%= link_to 'Show', project_role_path(@project.id, role) %></td>
        <td><%= link_to 'Edit', edit_project_role_path(@project.id, role) %></td>
        <td><%= link_to 'Destroy', project_role_path(@project.id, role), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Role', new_project_role_path(@project.id) %>
